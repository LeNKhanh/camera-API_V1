# Server
# PORT: cổng lắng nghe chính. Nếu bị chiếm và AUTO_PORT=1, service sẽ tự động tăng port.
PORT=3000
# AUTO_PORT=1 bật chế độ tự tìm port trống (thử tối đa 15 port liên tiếp kể từ PORT).
AUTO_PORT=0

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=Camera_api

# JWT
JWT_SECRET=change_me

# Storage directories (Windows paths allowed)
RECORD_DIR=C:\\tmp
SNAPSHOT_DIR=C:\\tmp
SNAPSHOT_CACHE_RTSP=0
SNAPSHOT_CACHE_OVERRIDE=0
ALT_RTSP_PORTS=8554,10554
ENABLE_SDK_SNAPSHOT=0
FAKE_SNAPSHOT_SIZE=1280x720

# Streaming base URL (if using HLS/DASH server)
STREAM_BASE_URL=http://localhost:8080/live

# Optional S3/MinIO (not fully wired by default)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=camera-media
