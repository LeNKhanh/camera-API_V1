# MediaMTX Proxy Configuration (add to your .env file)

# MediaMTX Host (domain or IP)
# Development: localhost
# Production: stream.your-domain.com
MEDIAMTX_HOST=localhost

# RTSP Port (for VLC, FFmpeg)
MEDIAMTX_RTSP_PORT=8554

# HLS Port (for browser playback)
# Development: 8888
# Production: 80 (via Nginx reverse proxy)
MEDIAMTX_HLS_PORT=8888

# WebRTC Port (for ultra-low latency)
# Development: 8889
# Production: 80 (via Nginx reverse proxy)
MEDIAMTX_WEBRTC_PORT=8889

# Use HTTPS for HLS and WebRTC URLs
# Development: false
# Production: true
MEDIAMTX_USE_HTTPS=false

# Optional: Enable authentication
# MEDIAMTX_AUTH_ENABLED=false
# MEDIAMTX_USERNAME=viewer
# MEDIAMTX_PASSWORD=your_secure_password
